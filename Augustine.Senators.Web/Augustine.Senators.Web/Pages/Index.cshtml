@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="index" class="container-fluid">
    <h1 class="display-4 text-center" style="padding-bottom:1em;">Welcome to Project Augustine</h1>
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Senators
                </div>
                <div class="card-body">
                    <h5 class="card-title">Access a list of Senators</h5>
                    <p class="card-text">Here we are maintaining a current list of ({{senators.length}}) senators and their contact information.</p>
                    <a asp-page="/Senators/Index" class="btn btn-primary">Access</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="alert alert-success" role="alert">
                        Session will begin soon!
                    </div>
                    <!-- Insert countdown here -->
                </div>
            </div>
        </div>
    </div>
</div>
